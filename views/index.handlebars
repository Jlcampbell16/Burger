
<div class="container">
  <h1>EAT-DA-BURGER</h1>

  <h2>Add a burger</h2>

  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <button id="submitBtn" type="submit">Add burger</button>
  </form>
</div>


<div class="container">

    <div class="burgerBox" id="burgerBox1" >
      <h2>Burgers waiting to be devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{!-- {{> burgers/burger-block devoured=false}} --}}
            <li>
              {{burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-newdevour="{{devoured}}">
                  {{#if devoured}}REORDER!{{else}}DEVOUR!{{/if}}
                </button>
            {{!-- <button class="delete-burger" data-id="{{this.id}}">DELETE!</button> --}}
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="burgerBox" id="burgerBox2">
    <h2>Burgers that have been devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
            {{burger_name}}
            {{!-- {{> burgers/burger-block devoured=true}} --}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
    </div>

</div>
